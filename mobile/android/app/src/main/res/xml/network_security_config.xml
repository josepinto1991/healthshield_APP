<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración base para desarrollo y producción -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Configuración específica para dominio Vercel -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">healthshield-app.vercel.app</domain>
        <domain includeSubdomains="true">*.vercel.app</domain>
    </domain-config>
    
    <!-- Para desarrollo local -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>